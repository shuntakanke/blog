  <label for="title">Title</label>
  <input type="text" name="title" value="<%= article.title %>" id="title" class="form-control" required>
</div>
<div class="form-group">
  <label for="description">Description</label>
  <textarea name="description" id="description" class="form-control" required><%= article.description %></textarea>
</div>
<div class="form-group">
  <label for="markdown">markdown</label>
  <textarea name="markdown" id="markdown" class="form-control" required><%= article.markdown %></textarea>
</div>


